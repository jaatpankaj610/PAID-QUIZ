                        <label for="amount">पेमेंट राशि</label>
                        <input type="text" id="amount" name="amount" placeholder="49" value="49" required>
                        <div id="amount_error" class="error-text"></div>
                    </div>
                    
                    <div class="form-group">
                        <div class="checkbox-container">
                            <label for="payment_made">
                                <input type="checkbox" id="payment_made" name="payment_made">
                                पेमेंट करने के बाद इस बॉक्स को टिक करें
                                <span class="checkbox-hint">पेमेंट रिक्वेस्ट भेजने के लिए QR कोड स्कैन करें और यहाँ टिक करें।</span>
                            </label>
                        </div>
                        <div id="payment_made_error" class="error-text"></div>
                    </div>
                    
                    <div class="form-group">
                        <label for="payment_note">कोई अतिरिक्त जानकारी (वैकल्पिक)</label>
                        <textarea id="payment_note" name="payment_note" rows="3" placeholder="पेमेंट संबंधी कोई विशेष जानकारी"></textarea>
                    </div>
                    
                    <button type="submit" class="submit-btn">पेमेंट रिक्वेस्ट भेजें</button>
                    <button type="button" class="check-btn" onclick="checkPaymentStatus()">पेमेंट स्टेटस चेक करें</button>
                    <button type="button" class="clear-btn" onclick="clearPaymentData()">पेमेंट डेटा रीसेट करें</button>
                </form>
                
                <div id="status-message" class="status-message"></div>
            </div>
        </div>
    </div>
    
    <div id="processing-screen" class="processing-screen">
        <img src="rajasthan-gk-quiz-logo.png" alt="App Logo" style="width: 100px; height: 100px; margin-bottom: 25px;">
        <div class="app-logo-name"><i class="fas fa-landmark"></i> राजस्थान GK क्विज़</div>
        <div class="processing-message">आपकी पेमेंट रिक्वेस्ट प्रोसेस हो रही है...</div>
        <div class="spinner"></div>
        <div class="processing-message" style="margin-top: 25px;">कुछ ही सेकंड्स में...</div>
    </div>
    
    <div id="success-modal" class="modal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal()">&times;</span>
            <div class="modal-header">
                <i class="fas fa-check-circle success-icon"></i>
                <h2>पेमेंट रिक्वेस्ट सफल!</h2>
            </div>
            <div class="modal-body">
                <p>आपकी पेमेंट रिक्वेस्ट हमें मिल गई है। आपका प्रीमियम अकाउंट 24 घंटे के भीतर एक्टिवेट हो जाएगा।</p>
                <div class="next-steps">
                    <p><b>अगला स्टेप:</b></p>
                    <button class="modal-btn" onclick="checkStatusAndRedirect()">
                        <i class="fas fa-sync-alt"></i> पेमेंट स्टेटस चेक करें
                    </button>
                    <p class="modal-instruction">पेमेंट अप्रूव होने पर यह बटन आपको सीधे क्विज़ पेज पर ले जाएगा।</p>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Firebase कॉन्फिगरेशन
        const firebaseConfig = {
            apiKey: "AIzaSyDB0mVcsgSUcM7X01xcffmRBiKWRU55u_M",
            authDomain: "rajasthan-gk-quiz-41cc5.firebaseapp.com",
            databaseURL: "https://rajasthan-gk-quiz-41cc5-default-rtdb.firebaseio.com",
            projectId: "rajasthan-gk-quiz-41cc5",
            storageBucket: "rajasthan-gk-quiz-41cc5.firebasestorage.app",
            messagingSenderId: "876482514501",
            appId: "1:876482514501:web:1ac10bc020591a5d931d2c",
            measurementId: "G-VB140B6NCW"
        };

        // Firebase इनिशियलाइज़ करें
        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();

        // ग्लोबल वेरिएबल्स
        let isConnected = false;
        let autoCheckInterval = null;
        let userEmail = ""; // यूजर का ईमेल स्टोर करने के लिए

        document.addEventListener('DOMContentLoaded', function() {
            // कनेक्शन स्टेटस मॉनिटर करें
            monitorConnectionStatus();
            
            // डिवाइस आईडी प्राप्त करें
            getDeviceId();
            
            // फॉर्म सबमिट इवेंट मजबूती से बाइंड
            const paymentForm = document.getElementById('payment-form');
            if (paymentForm) {
                paymentForm.addEventListener('submit', function(event) {
                    event.preventDefault();
                    submitPayment();
                });
            }
        });

        // डिवाइस आईडी प्राप्त करने का फंक्शन
        function getDeviceId() {
            // पहले Firebase से डिवाइस आईडी चेक करें
            database.ref('devices').once('value')
                .then((snapshot) => {
                    const devices = snapshot.val();
                    let deviceId = localStorage.getItem('deviceId');
                    
                    // अगर डिवाइस आईडी लोकल स्टोरेज में नहीं है, तो एक नया बनाएं
                    if (!deviceId) {
                        deviceId = 'device_' + Math.random().toString(36).substr(2, 9);
                        localStorage.setItem('deviceId', deviceId);
                    }
                    
                    // डिवाइस आईडी को Firebase में सेव करें
                    database.ref('devices/' + deviceId).set({
                        deviceId: deviceId,
                        lastSeen: new Date().toISOString()
                    });
                    
                    // डिवाइस के लिए सेव किया गया यूजर ईमेल प्राप्त करें
                    database.ref('devices/' + deviceId + '/userEmail').once('value')
                        .then((snapshot) => {
                            if (snapshot.val()) {
                                userEmail = snapshot.val();
                                document.getElementById('user_id').value = userEmail;
                                
                                // यूजर की पेमेंट स्टेटस ऑटोमेटिक चेक करें
                                autoCheckPaymentStatus();
                            }
                        });
                })
                .catch((error) => {
                    console.error("डिवाइस आईडी प्राप्त करने में त्रुटि:", error);
                });
        }

        // कनेक्शन स्टेटस मॉनिटर करें
        function monitorConnectionStatus() {
            const connectionStatus = document.getElementById('connection-status');
            
            // कनेक्टेड स्टेटस
            database.ref('.info/connected').on('value', (snapshot) => {
                if (snapshot.val() === true) {
                    connectionStatus.className = 'connection-status connected';
                    connectionStatus.innerHTML = '<i class="fas fa-circle"></i><span>कनेक्टेड</span>';
                    isConnected = true;
                } else {
                    connectionStatus.className = 'connection-status disconnected';
                    connectionStatus.innerHTML = '<i class="fas fa-circle"></i><span>डिस्कनेक्टेड</span>';
                    isConnected = false;
                }
            });
        }
        
        function showProcessingScreen() {
            document.getElementById('processing-screen').style.display = 'flex';
        }

        function hideProcessingScreen() {
            document.getElementById('processing-screen').style.display = 'none';
        }

        function submitPayment() {
            const statusMessage = document.getElementById('status-message');

            // वैलिडेशन चेक
            const isValid = validateForm();
            if (!isValid) {
                statusMessage.className = 'status-message error';
                statusMessage.textContent = 'कृपया फॉर्म में सभी जरूरी जानकारी सही भरें।';
                statusMessage.style.display = 'block';
                return;
            }

            showProcessingScreen();

            const userId = document.getElementById('user_id').value.toLowerCase().trim().replace(/[\.\#\$\/\[\]]/g, "_");
            const mobileNumber = document.getElementById('mobile_number').value.trim();
            const transactionId = document.getElementById('transaction_id').value.trim();
            const amount = document.getElementById('amount').value.trim();
            const paymentNote = document.getElementById('payment_note').value.trim();

            // यूजर ईमेल को सेव करें
            userEmail = userId;
            saveUserEmailToDevice(userId);

            // पेमेंट डेटा ऑब्जेक्ट बनाएं
            const paymentData = {
                user_id: userId,
                mobile_number: mobileNumber,
                transaction_id: transactionId,
                amount: amount,
                payment_note: paymentNote,
                status: 'pending',
                timestamp: new Date().toISOString()
            };

            // Firebase में पेमेंट रिक्वेस्ट सेव करें
            if (isConnected) {
                // Firebase का उपयोग करें
                database.ref('payments').push(paymentData)
                    .then(() => {
                        hideProcessingScreen();
                        showSuccessModal(transactionId);
                        
                        // ऑटो चेक शुरू करें
                        startAutoCheck();
                    })
                    .catch((error) => {
                        console.error("Firebase त्रुटि:", error);
                        hideProcessingScreen();
                        statusMessage.className = 'status-message error';
                        statusMessage.textContent = 'पेमेंट रिक्वेस्ट भेजने में समस्या हुई। कृपया दोबारा कोशिश करें।';
                        statusMessage.style.display = 'block';
                    });
            } else {
                hideProcessingScreen();
                statusMessage.className = 'status-message error';
                statusMessage.textContent = 'इंटरनेट कनेक्शन नहीं है। कृपया इंटरनेट कनेक्शन चेक करें।';
                statusMessage.style.display = 'block';
            }
        }

        // यूजर ईमेल को डिवाइस से जोड़ने का फंक्शन
        function saveUserEmailToDevice(userId) {
            const deviceId = localStorage.getItem('deviceId');
            if (deviceId) {
                database.ref('devices/' + deviceId + '/userEmail').set(userId);
            }
        }

        // ऑटो चेक शुरू करने का फंक्शन
        function startAutoCheck() {
            // पहले से चल रहे ऑटो चेक को रोकें
            if (autoCheckInterval) {
                clearInterval(autoCheckInterval);
            }
            
            // ऑटो चेक स्टेटस दिखाएं
            document.getElementById('auto-check-status').style.display = 'flex';
            
            // हर 10 सेकंड में पेमेंट स्टेटस चेक करें
            autoCheckInterval = setInterval(() => {
                autoCheckPaymentStatus();
            }, 10000);
            
            // पहली बार तुरंत चेक करें
            autoCheckPaymentStatus();
        }

        // ऑटो पेमेंट स्टेटस चेक करने का फंक्शन
        function autoCheckPaymentStatus() {
            if (!userEmail) return;
            
            // Firebase से यूजर की पेमेंट स्टेटस चेक करें
            database.ref('payments').orderByChild('user_id').equalTo(userEmail).once('value')
                .then((snapshot) => {
                    const payments = snapshot.val();
                    let foundPayment = null;
                    
                    if (payments) {
                        // सबसे नई पेमेंट ढूंढें
                        for (let key in payments) {
                            if (!foundPayment || new Date(payments[key].timestamp) > new Date(foundPayment.timestamp)) {
                                foundPayment = payments[key];
                                foundPayment.id = key;
                            }
                        }
                    }
                    
                    if (foundPayment) {
                        if (foundPayment.status === 'approved') {
                            // प्रीमियम एक्सेस चेक करें
                            checkPremiumAccess(userEmail, foundPayment);
                        }
                        // अन्य स्टेटस के लिए कुछ न करें, ऑटो चेक जारी रहेगा
                    }
                })
                .catch((error) => {
                    console.error("ऑटो पेमेंट स्टेटस चेक करने में त्रुटि:", error);
                });
        }

        // पेमेंट स्टेटस चेक करने का फंक्शन
        function checkPaymentStatus() {
            const userId = document.getElementById('user_id').value.toLowerCase().trim();
            
            if (!userId) {
                showStatusMessage('कृपया अपना ईमेल ID दर्ज करें!', 'error');
                return;
            }
            
            // यूजर ईमेल को सेव करें
            userEmail = userId;
            saveUserEmailToDevice(userId);
            
            showProcessingScreen();
            
            // Firebase से यूजर की पेमेंट स्टेटस चेक करें
            database.ref('payments').orderByChild('user_id').equalTo(userId).once('value')
                .then((snapshot) => {
                    const payments = snapshot.val();
                    let foundPayment = null;
                    
                    if (payments) {
                        // सबसे नई पेमेंट ढूंढें
                        for (let key in payments) {
                            if (!foundPayment || new Date(payments[key].timestamp) > new Date(foundPayment.timestamp)) {
                                foundPayment = payments[key];
                                foundPayment.id = key;
                            }
                        }
                    }
                    
                    hideProcessingScreen();
                    
                    if (foundPayment) {
                        if (foundPayment.status === 'approved') {
                            // प्रीमियम एक्सेस चेक करें
                            checkPremiumAccess(userId, foundPayment);
                        } else if (foundPayment.status === 'pending') {
                            showStatusMessage('आपकी पेमेंट अभी पेंडिंग है। कृपया कुछ देर बाद फिर से कोशिश करें।', 'pending');
                            
                            // ऑटो चेक शुरू करें
                            startAutoCheck();
                        } else if (foundPayment.status === 'rejected') {
                            showStatusMessage('आपकी पेमेंट रिजेक्ट हो गई है। कृपया सही ट्रांजैक्शन ID के साथ दोबारा कोशिश करें।', 'error');
                        }
                    } else {
                        showStatusMessage('इस ईमेल ID के लिए कोई पेमेंट रिकॉर्ड नहीं मिला।', 'error');
                    }
                })
                .catch((error) => {
                    console.error("पेमेंट स्टेटस चेक करने में त्रुटि:", error);
                    hideProcessingScreen();
                    showStatusMessage('पेमेंट स्टेटस चेक करने में त्रुटि। कृपया दोबारा कोशिश करें।', 'error');
                });
        }

        // प्रीमियम एक्सेस चेक करने का फंक्शन
        function checkPremiumAccess(userId, payment) {
            // Firebase से प्रीमियम एक्सेस चेक करें
            database.ref('premiumAccess/' + userId).once('value')
                .then((snapshot) => {
                    const premiumData = snapshot.val();
                    
                    if (premiumData) {
                        const now = new Date();
                        const expiryDate = new Date(premiumData.expiresAt);
                        
                        if (expiryDate > now) {
                            // एक्सेस वैलिड है, रीडायरेक्ट करें
                            showStatusMessage('आपकी पेमेंट अप्रूव हो गई है! आपको 5 सेकंड में रीडायरेक्ट किया जाएगा।', 'success');
                            
                            // ऑटो चेक रोकें
                            if (autoCheckInterval) {
                                clearInterval(autoCheckInterval);
                                document.getElementById('auto-check-status').style.display = 'none';
                            }
                            
                            setTimeout(() => {
                                window.location.href = 'quiz.html?user_id=' + userId;
                            }, 5000);
                        } else {
                            // एक्सेस एक्सपायर हो गया है
                            showStatusMessage('आपकी प्रीमियम एक्सेस की अवधि समाप्त हो गई है। कृपया दोबारा पेमेंट करें।', 'error');
                        }
                    } else {
                        // प्रीमियम एक्सेस नहीं मिला, लेकिन पेमेंट अप्रूव है
                        showStatusMessage('आपकी पेमेंट अप्रूव हो गई है, लेकिन प्रीमियम एक्सेस सेट होने में कुछ समय लग सकता है। कृपया कुछ देर बाद फिर से कोशिश करें।', 'pending');
                    }
                })
                .catch((error) => {
                    console.error("प्रीमियम एक्सेस चेक करने में त्रुटि:", error);
                    showStatusMessage('प्रीमियम एक्सेस चेक करने में त्रुटि। कृपया दोबारा कोशिश करें।', 'error');
                });
        }

        function validateForm() {
            let isValid = true;
            const userId = document.getElementById('user_id').value.trim();
            const mobileNumber = document.getElementById('mobile_number').value.trim();
            const transactionId = document.getElementById('transaction_id').value.trim();
            const amount = document.getElementById('amount').value.trim();
            const paymentMade = document.getElementById('payment_made').checked;

            document.getElementById('form-error').style.display = 'none';
            document.getElementById('user_id_error').style.display = 'none';
            document.getElementById('mobile_number_error').style.display = 'none';
            document.getElementById('transaction_id_error').style.display = 'none';
            document.getElementById('amount_error').style.display = 'none';
            document.getElementById('payment_made_error').style.display = 'none';

            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!userId) {
                document.getElementById('user_id_error').textContent = 'कृपया ईमेल ID दर्ज करें!';
                document.getElementById('user_id_error').style.display = 'block';
                isValid = false;
            } else if (!emailRegex.test(userId)) {
                document.getElementById('user_id_error').textContent = 'कृपया सही ईमेल फॉर्मेट दर्ज करें!';
                document.getElementById('user_id_error').style.display = 'block';
                isValid = false;
            }

            const mobileRegex = /^\d{10}$/;
            if (!mobileNumber) {
                document.getElementById('mobile_number_error').textContent = 'कृपया मोबाइल नंबर दर्ज करें!';
                document.getElementById('mobile_number_error').style.display = 'block';
                isValid = false;
            } else if (!mobileRegex.test(mobileNumber)) {
                document.getElementById('mobile_number_error').textContent = 'कृपया 10 अंकों का सही मोबाइल नंबर दर्ज करें!';
                document.getElementById('mobile_number_error').style.display = 'block';
                isValid = false;
            }

            if (!transactionId) {
                document.getElementById('transaction_id_error').textContent = 'कृपया UPI ट्रांजैक्शन ID दर्ज करें!';
                document.getElementById('transaction_id_error').style.display = 'block';
                isValid = false;
            }

            const parsedAmount = parseFloat(amount);
            if (!amount || isNaN(parsedAmount) || parsedAmount <= 0) {
                document.getElementById('amount_error').textContent = 'कृपया सही राशि दर्ज करें!';
                document.getElementById('amount_error').style.display = 'block';
                isValid = false;
            }

            if (!paymentMade) {
                document.getElementById('payment_made_error').textContent = 'कृपया पेमेंट करने के बाद इस बॉक्स को टिक करें!';
                document.getElementById('payment_made_error').style.display = 'block';
                isValid = false;
            }

            return isValid;
        }

        function clearPaymentData() {
            const userId = document.getElementById('user_id').value.toLowerCase().trim();
            if (!userId) {
                alert('कृपया ईमेल ID दर्ज करें!');
                return;
            }
            
            // यूजर ईमेल को डिवाइस से हटाएं
            const deviceId = localStorage.getItem('deviceId');
            if (deviceId) {
                database.ref('devices/' + deviceId + '/userEmail').remove();
            }
            
            // ऑटो चेक रोकें
            if (autoCheckInterval) {
                clearInterval(autoCheckInterval);
                document.getElementById('auto-check-status').style.display = 'none';
            }
            
            userEmail = "";
            alert('आपका पेमेंट डेटा रीसेट हो गया है।');
            document.getElementById('payment-form').reset();
        }
        
        function showSuccessModal(transactionId) {
            document.getElementById('success-modal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('success-modal').style.display = 'none';
        }

        function checkStatusAndRedirect() {
            closeModal();
            checkPaymentStatus();
        }

        function showStatusMessage(message, type) {
            const statusMessage = document.getElementById('status-message');
            
            statusMessage.className = 'status-message ' + type;
            statusMessage.textContent = message;
            statusMessage.style.display = 'block';
        }

        document.querySelector('.upi-id').addEventListener('click', () => {
            const upiId = '9057650616@amazon.pay';
            navigator.clipboard.writeText(upiId).then(() => {
                alert('UPI ID कॉपी हो गई है!');
            }).catch(err => {
                console.error('Failed to copy UPI ID: ', err);
            })
        });
    </script>
</body>
</html>
